pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
               // echo 'Hello World'
               git branch: 'main', url: 'https://github.com/nanbod/ncpl_project_1.git'
            }
        }
        stage('Deploy') {
            steps {
                    sshagent(['ID']) {
                                sh "scp -o StrictHostKeyChecking=no * azureuser@10.1.0.5:/var/www/html/"
                    }
            }
        }
    }
}
